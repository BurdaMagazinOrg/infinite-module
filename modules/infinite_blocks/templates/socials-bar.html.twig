{% if not use_parent_container %}
<div class="socials socials-bar">
    {% endif %}

    {% set rel_follow = 'nofollow' %}
    {% if follow %} {% set rel_follow = 'follow' %} {% endif %}

    <a class="item-social icon-facebook" href="{{ facebook_page_url }}" target="_blank"
       data-social-type="facebook" rel="{{ rel_follow }}"></a>
    <a class="item-social icon-instagram" href="{{ instagram_page_url }}" target="_blank"
       data-social-type="instagram" rel="{{ rel_follow }}"></a>
    <a class="item-social icon-pinterest" href="{{ pinterest_page_url }}" target="_blank"
       data-social-type="pinterest" rel="{{ rel_follow }}"></a>
    <a class="item-social icon-twitter" href="{{ twitter_page_url }}" target="_blank"
       data-social-type="twitter" rel="{{ rel_follow }}"></a>

    {% if not use_parent_container %}
</div>
{% endif %}
