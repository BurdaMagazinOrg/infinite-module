<?php

/**
 * Implements hook_page_attachments().
 */
function burdastyle_wishlist_page_attachments(array &$attachments)
{
  if (false === \Drupal::service('router.admin_context')->isAdminRoute(
    \Drupal::routeMatch()->getRouteObject()
  )) {
    $attachments['#attached']['library'][] = 'burdastyle_wishlist/basic';
  }
}

/**
 * Implements hook_theme().
 */
function burdastyle_wishlist_theme() {
  return [
    'burdastyle_wishlist_item' => [
      'variables' => [
        'product' => [],
        'image' => null,
      ],
    ],
    'burdastyle_wishlist_page' => [
      'variables' => [],
    ],
    'burdastyle_wishlist_flyout' => [
      'variables' => [],
    ],
  ];
}