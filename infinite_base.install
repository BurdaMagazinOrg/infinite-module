function infinite_base_requirements($phase) {

  $requirements = [];

  switch ($phase) {
    case 'install':

      $theme_handler = \Drupal::service('theme_handler');
      $themes = $theme_handler->listInfo();  // Get a list of available themes.

      if (empty($themes['infinite'])) {

        try {

          \Drupal::service('theme_installer')
            ->install(['infinite'], TRUE);

        } catch (InvalidArgumentException $e) {
          $requirements['infinite']['severity'] = REQUIREMENT_ERROR;;
          $requirements['infinite']['description'] = 'Please place the infinite in the theme folder';
        }


      }
      break;
  }
  return $requirements;
}